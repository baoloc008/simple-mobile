<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#ffffff"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="10dp">

  <ImageView
      android:id="@+id/video_item_full_iv_thumbnail"
      android:layout_width="match_parent"
      android:layout_height="184.5dp"
      android:adjustViewBounds="true"
      android:scaleType="fitXY" />

  <TextView
      android:id="@+id/video_item_full_tv_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/video_item_full_iv_thumbnail"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/rounded_corners"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:textColor="@android:color/white"
      tools:text="1:30" />


  <TextView
      android:id="@+id/video_item_full_tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/video_item_full_iv_thumbnail"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textAppearance="@style/AppTheme.Text.Subheader"
      android:textColor="@color/colorDarkTextPrimary"
      tools:text="[LIC] Chênh Vênh - Lê Cát Trọng Lý" />

  <TextView
      android:id="@+id/video_item_full_tv_statistics"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/video_item_full_tv_title"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="8dp"
      android:textAppearance="@style/AppTheme.Text"
      android:textColor="@color/colorDarkTextSecondary"
      tools:text="Lê Cát Trọng Lý - 950K views" />

  <ImageButton
      android:id="@+id/video_item_full_tv_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/video_item_full_iv_thumbnail"
      android:layout_marginTop="8dp"
      android:background="@null"
      android:src="@drawable/ic_more_vert" />

</RelativeLayout>
