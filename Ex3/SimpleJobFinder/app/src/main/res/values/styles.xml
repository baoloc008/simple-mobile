<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Text.Subheader">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FFFFFFFF</item>
        <item name="android:textColorPrimary">@color/colorLightTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorLightTextSecondary</item>
    </style>

</resources>
